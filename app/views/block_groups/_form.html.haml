= form_for @block_group do |f|
  - if @block_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@block_group.errors.count, "error")} prohibited this block_group from being saved:"
      %ul
        - @block_group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :properties
    = f.text_field :properties
  .field
    = f.label :value
    = f.text_field :value
  .actions
    = f.submit 'Save'
